{
  "version": 2,
  "name": "smartdelivery", 
  
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist" 
      }
    },
    {
      "src": "server/package.json", 
      "use": "@vercel/node"
    }
  ],
  
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/dist/server.js" 
    },
    {
      "source": "/assets/(.*)",
      "destination": "/frontend/dist/assets/$1" 
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/index.html" 
    }
  ]
}