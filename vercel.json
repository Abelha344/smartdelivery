
{
  "version": 2,
  "name": "smartdelivery", 
  
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist" 
      }
    },
    {
      "src": "server/package.json", 
      "use": "@vercel/node"
    }
  ],
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/dist/server.js" 
    },
    
    {
      "src": "/(assets/.*)",
      "dest": "frontend/dist/$1"
    },
    
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}